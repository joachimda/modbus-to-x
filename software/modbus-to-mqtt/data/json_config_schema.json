{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ModbusToXConfig",
  "type": "object",
  "required": ["version", "device", "serial", "registers"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "device": {
      "type": "object",
      "required": ["slaveId"],
      "properties": {
        "name": { "type": "string" },
        "slaveId": { "type": "integer", "minimum": 1, "maximum": 247 }
      },
      "additionalProperties": false
    },
    "serial": {
      "type": "object",
      "required": ["baud", "format"],
      "properties": {
        "baud": { "type": "integer", "enum": [1200,2400,4800,9600,19200,38400,57600,115200,230400,460800,921600] },
        "format": {
          "type": "string",
          "enum": ["5N1","6N1","7N1","8N1","5N2","6N2","7N2","8N2","5E1","6E1","7E1","8E1","5E2","6E2","7E2","8E2","5O1","6O1","7O1","8O1","5O2","6O2","7O2","8O2"]
        }
      },
      "additionalProperties": false
    },
    "modbus": {
      "type": "object",
      "properties": {
        "timeoutMs": { "type": "integer", "minimum": 1, "maximum": 10000 },
        "retries": { "type": "integer", "minimum": 0, "maximum": 10 }
      },
      "additionalProperties": false
    },
    "registers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["address","numOfRegisters","scale","registerType","dataType","name"],
        "properties": {
          "address": { "type": "integer", "minimum": 0, "maximum": 65535 },
          "numOfRegisters": { "type": "integer", "minimum": 1, "maximum": 125 },
          "scale": { "type": "number" },
          "registerType": { "type": "string", "enum": ["HOLDING_REGISTER","INPUT_REGISTER"] },
          "dataType": { "type": "string", "enum": ["TEXT","NUMBER","DATE"] },
          "name": { "type": "string", "minLength": 1, "maxLength": 16 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
